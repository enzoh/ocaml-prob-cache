OASISFormat: 0.4
Name:        prob-cache
Version:     0.1
License:     GPL
LicenseFile: LICENSE.txt
Authors:     Carmelo Piccione
Synopsis:    Probability cache library for OCaml
BuildTools:  ocamlbuild
Plugins: META (0.4), DevFiles (0.4)

Flag riak
  Description: Enable/Disable riak cache backend
  Default: true
Flag containers
  Description: Enable/Disable containers cache backend
  Default: true

Flag containers_examples
  Description: Enable/Disable containers api examples
  Default: true
Flag riak_examples
  Description: Enable/Disable riak api examples
  Default: true


Library prob_cache_common
  Path:               src/common
  Pack:               true
  Modules:            Update_rules, Running, Data, Events_common, Calculus, Create_fun, Observe_data_fun, Data_fun, Find_fun, Model_decorator, Model_kernel 
  InternalModules:    Powerset
  BuildDepends:       containers, containers.misc, containers.data, containers.advanced, sequence, ppx_deriving, ppx_deriving.ord, ppx_deriving.show, ppx_deriving.iter, ppx_deriving_protobuf, or_errors

  FindLibName:        prob_cache_common


Library prob_cache_containers
  if flag(containers)
    Build: true
  else
    Build: false
  Path:               src/containers
  Pack:               true
  Modules:            Model_intf, Set_model, Sequence_model
  InternalModules:    Model_impl
  BuildDepends:       prob_cache_common, containers, containers.misc, containers.data, containers.advanced, sequence, ppx_deriving, ppx_deriving.ord, ppx_deriving.show, ppx_deriving.iter, ppx_deriving_protobuf
  FindLibName:        prob_cache_containers

Library prob_cache_riak
  if flag(riak)
    Build: true
  else
    Build: false
  Path:               src/riak
  Pack:               true
  Modules:            Model_intf, Set_model, Sequence_model
  InternalModules:    Model_impl
  BuildDepends:       threads, containers, containers.misc, ppx_deriving, ppx_deriving.ord, ppx_deriving.show, ppx_deriving.iter, ppx_deriving_protobuf, prob_cache_common, core, async, bitstring, riakc_ppx
  FindLibName:        prob_cache_riak


Executable containers_sprinkler
  if flag(containers_examples)
    Build: true
  else
    Build: false
  Path:               src/examples
  MainIs:             sprinkler.ml 
  BuildDepends:       prob_cache_containers

Executable containers_coin_flip
  if flag(containers_examples)
    Build: true
  else
    Build: false
  Path:               src/examples
  MainIs:             coin_flip.ml 
  BuildDepends:       prob_cache_containers

Executable riak_sprinkler
  if flag(riak_examples)
    Build: true
  else
    Build: false
  Path:               src/riak_examples
  MainIs:             riak_sprinkler.ml
  BuildDepends:       prob_cache_riak

Executable riak_coin_flip
  if flag(riak_examples)
    Build: true
  else
    Build: false
  Path:               src/riak_examples
  MainIs:             riak_coin_flip.ml
  BuildDepends:       prob_cache_riak


